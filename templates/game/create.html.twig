{% extends 'base.html.twig' %}

{% block title %}Create new Bowling Game!{% endblock %}

{% block body %}

<div class="row">
    <div class="pt-3 offset-sm-3 offset-lg-4 col-12 col-sm-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Yupop Bowling</h2>
                <h6 class="card-title">Start a new game!</h6>

                <div class="card-text">
                    {{ form_start(game_form) }}
                    {{ form_row(game_form.name, {label: false, attr: {placeholder: 'Game name'}}) }}
                    {{ form_end(game_form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

